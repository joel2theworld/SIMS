{{> dashboard-links}}

<h4 class="text-center">All Students</h4>
<a href="/assign/assignstudentrole" class="btn btn-sm btn-danger m-1">Assign Student Role </a>
<table class="table table-bordered table-striped">  
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Full Name </th>
      <th scope="col">Matric No </th>
      <th scope="col">Reg. No</th>
      <th scope="col">email</th>
      <th scope="col">Phone No</th>
      
      {{!-- <th scope="col" class="text-end">Action</th>
    </tr> --}}
  </thead>
  <tbody>
    {{#each studentList}}
    <tr>
      <th scope="row">{{indexIncr @index}}</th>
      <td>{{this.lastName}} {{this.firstName}} {{this.middleName}}</td>
      <td>{{this.matricNo}}</td>

      <!--Nested loop for users -->  
        
        <td>{{this.regNo }}</td>
        <td>{{this.email }}</td>
        <td>{{this.phoneNo }}</td>
      
      <td class="text-end">
        <a href="/editstudent/{{this.id}}" type="button" class="btn btn-secondary btn-sm"> <i class="bi bi-pencil"></i> Edit</a>

     <a href="/allstudents/{{this.id}}" type="button" class="btn btn-danger btn-sm"> <i class="bi bi-trash3"></i> Delete</a>
   
    
        </td>

        
    </tr>
    {{/each}}
    
  </tbody>
</table>