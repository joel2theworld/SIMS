{{#if adminResolvedInc.length}}
	<table class='table table-bordered table-striped'>
		<h4 class='text-center'> All Resolved Incidents</h4>

		<form method='post' action='/resolve' class='d-flex' role='search' novalidate>
	{{> search}}
	
</form>

		<thead class='thead-dark'>
			<tr>
				<th scope='col'>#</th>
				<th scope='col'>Description </th>
				<th scope='col'>Room No </th>
				<th scope='col'>Category </th>
				<th scope='col'>Post by </th>
				<th scope='col' class='text-center'>Action</th>
			</tr>
		</thead>
		<tbody>
			{{#each adminResolvedInc}}
				<tr>
					<th scope='row'>{{indexIncr @index}}</th>
					<td>{{this.description}}</td>
					<td>{{this.roomno}}</td>
					<td>{{this.incidentcategory.category}}</td>

					<!--Nested loop for users -->
					<td>{{this.studentreg.firstName}}</td>
					<form>
						<input type='hidden' name='id' value='{{this.id}}' />
					</form>

					<td class='text-center m-1'>

						<a
							href='/incidentdetails/{{this.id}}'
							type='button'
							class='btn btn-secondary btn-sm m-1'
						>
							Feedbacks
							<i class='bi bi-chat-left-text-fill'></i>

							<span class='badge rounded-pill p-1'>

							</span>

						</a>

						<!--ADMIN ONLY -->
						<a
							href='/dashboard/{{this.id}}'
							type='button'
							class='btn btn-danger btn-sm m-1'
						><i class='bi bi-trash3'></i> Drop </a>

					</td>

				</tr>
			{{/each}}

		</tbody>
	</table>

	<!-- Record not found -->

{{else}}
	<div class='d-flex justify-content-center'>
		<div class='col-md-5'>

			<div class='card text-center p-5'>
				<h3 class='text-danger'>No record found yet</h3>
			</div>

		</div>
	</div>
{{/if}}