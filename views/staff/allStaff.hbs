
<div class="container">
  {{#if isAdmin}}

{{> dashboard-links}}

<h4 class="text-center">All Registered Staff</h4>

<a href="/newstaff" class="btn btn-sm btn-secondary m-1">New Staff</a>   |  <a href="/assign/assignrole" class="btn btn-sm btn-danger m-1">Assign Staff Role </a> 
<table class="table table-bordered table-striped">  
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Full Name </th>
     
      <th scope="col">email</th>
      <th scope="col">username</th>
      <th scope="col">Phone No</th>
      <th scope="col">User Role</th>
      <th scope="col"></th>
      
      {{!-- <th scope="col" class="text-end">Action</th>
    </tr> --}}
  </thead>
  <tbody>
    {{#each staffList as |staff|}}
    <tr>
      <th scope="row">{{indexIncr @index}}</th>
      <td>{{staff.lastName}} {{staff.firstName}} </td>     
        <td>{{staff.email }}</td>
        <td>{{staff.username }}</td>
        <td>{{staff.phoneNo }}</td>
        <td>
            {{staff.userrole.roles }}

        </td>
      
      <td class="text-end">
   
    <a href="/editstaff/{{staff.id}}" type="button" class="btn btn-secondary btn-sm"> <i class="bi bi-pencil"></i> Edit</a>

     <a href="/allstaff/{{staff.id}}" type="button" class="btn btn-danger btn-sm"> <i class="bi bi-trash3"></i> Delete</a>

<!--ADMIN -->
   
        </td>
    </tr>
    {{/each}}
    
  </tbody>
</table>

{{else}}
        <div class="d-flex justify-content-center" >
  <div class="col-md-5 ">
   
<div class="card text-center p-5">
  <h3 class="text-danger">Unauthorized Access </h3>
  </div>
  </div>


{{/if}}

</div>
